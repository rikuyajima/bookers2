<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title %>
    </div>
    
    <div class="form-group">
     <label for="book_Opinion">Opinion</label>
     <%= f.text_area :body %>
    </div>
    
    <div class="form-group">
     <%= f.submit 'Create Book' %>
     <% end %>
    </div>
  
